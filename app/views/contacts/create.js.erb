function resetForm($form) {
    $form.find('input[type="text"], input[type="password"], input[type="file"], select, textarea, input[type="email"]').val('');
    $form.find('input[type="radio"], input[type="checkbox"]').removeAttr('checked').removeAttr('selected');

}
function clearErrors($form) {
	$form.find('div').removeClass('error');
	$form.find('div small').remove();
	$form.find('.alert').remove();
}
